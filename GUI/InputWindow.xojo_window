#tag WindowCode
	#tag Method, Flags = &h21
		Private Sub Constructor(initTitle as string, initMsg as string)
		  // Calling the overridden superclass constructor.
		  Super.Constructor
		  
		  MessageLabel.Text = initMsg
		  Title = initTitle
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Shared Function showInput(title as string, message as string) As Variant
		  dim instance as new InputWindow(title , message)
		  instance.ShowModal
		  
		  return value
		  
		End Function
	#tag EndMethod


	#tag Property, Flags = &h21
		Private Shared value As Variant
	#tag EndProperty


#tag EndWindowCode

#tag Events OKbtn
	#tag Event
		Sub Action()
		  value = InputField.Text
